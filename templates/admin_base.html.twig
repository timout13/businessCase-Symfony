<!DOCTYPE html>
<html>
{% set isAdmin = app.request.get('_route') %}
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('node_modules/bootstrap-icons/font/bootstrap-icons.css') }}">
        <link rel="stylesheet" href="{{ asset('node_modules/@fortawesome/fontawesome-free/css/all.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
        <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
        <link rel="stylesheet" href="{{ asset('css/cookie.css') }}">
        <link href="{{ asset('css/admin/admin_header.css') }}" rel="stylesheet">
    {% endblock %}


</head>
<body  id="body-pd">
<header class="bg-light">
    {% include 'admin/parts/navbar.html.twig' %}
</header>
<main>
    <div class="content_layout op" id="content-layout"></div>
    {% include 'admin/parts/sidebar.html.twig' %}
    <div class="p-5 p-admin-large-card bg-light">
        {% block body %}
        {% endblock %}
    </div>
</main>
<footer>
</footer>


{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="{{ asset('js/bootstrap.bundle.js') }}"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="{{ asset('js/admin/admin_header.js') }}"></script>
{% endblock %}
</body>
</html>
