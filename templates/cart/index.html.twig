{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <main>
        <div class="container">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Prix unitaire</th>
                    <th scope="col">Prix total</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for productOrder in cart %}
                    {% dump productOrder %}
                    <tr>
                        <th scope="row">{{ productOrder.product.id }}</th>
                        <th scope="row">{{ productOrder.product.name }}</th>
                        <td>{{ productOrder.quantity }}</td>
                        <td>{{ productOrder.product.price }} €</td>
                        <td>{{ productOrder.product.price * productOrder.quantity }} €</td>
                        <td><a href="{{ path('detail', {'id':productOrder.product.id}) }}">Détail</a> | |</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}
