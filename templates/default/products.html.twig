{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <div class="container">
            <h3>Nos produits</h3>
            <div class="row">
                {% for produit in produits %}
                    <div class="col-md-4 col-sm-12 my-2 d-flex justify-content-center">
                        <div class="card" style="width: 18rem;">
                            <img src="{{ produit.image }}" class="card-img-top  imgProduct" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{ produit.name }}</h5>
                                <p class="card-text">{{ produit.descrption| u.truncate(50, '...') }}</p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                                <a href="{{ path('cart_add', {'id': produit.id }) }}" class="btn btn-primary">Ajouter au panier</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}