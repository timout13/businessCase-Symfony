{% extends 'admin_base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Administration des catégories</h1>

    <a href="{{ path('admin_category_new') }}">Ajouter une catégorie</a>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Label</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.label }}</td>
                <td>
                    <a href="{{ path('admin_category_show', {'id': category.id}) }}">Voir</a>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
